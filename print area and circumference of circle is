#include<iostream>
using namespace std;
int main()
{
    double pi,radius,area,circumference;
    pi=3.14;
    cout <<"enter the value of radius:";
    cin >> radius;
    area =pi *(radius*radius);
    circumference=2*pi*radius;
    cout << "the  area of the circle is" << area << "and the value of circumference is" << circumference << '.'<< endl;
    system("pause");
}
    



